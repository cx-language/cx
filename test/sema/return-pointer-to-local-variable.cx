    var a = 3;
    // CHECK: [[@LINE+1]]:13: warning: returning pointer to local variable
    return &a;
}

int& f1() {
    var a = 3;
    // CHECK: [[@LINE+1]]:12: warning: returning pointer to local variable
    return a;
