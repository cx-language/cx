// RUN: check_exit_status 0 compile_and_run -Werror %s

def main() {
    testBytes();
    testLines();
    testWrite();
    testOutputStream();
    testInputStreamIsOpenOnNonexistingFile();
    testInputStream();
    testReadlineTwice();
    testMultipleEmptyLines();
    testIsEofWhileLoop();
}

def testBytes() {
    var f = FileStream("test.txt");

    var real = "this\nis the\nbest\n";
    var i: uint = 0;

    for (var byte in f.bytes()) {
        assert(real[i] == char(byte));
        i++;
    }

    assert(i == 17);
}

def testLines() {
    var f = FileStream("test.txt");

    var a = Array<StringRef>();
    a.push("this");
    a.push("is the");
    a.push("best");

    var i: uint = 0;

    for (var line in f.lines()) {
        assert(*a[i] == StringRef(line));
        i++;
    }

    assert(i == 3);
}

def testReadlineTwice() {
    var f = InputFileStream("test.txt");

    var a = f.readLine();
    assert(StringRef(a) == "this");
    a = f.readLine();
    assert(StringRef(a) == "is the");
}

def testMultipleEmptyLines() {
    var f = InputFileStream("corner.txt");

    var a = f.readLine();
    assert(StringRef(a) == "");

    a = f.readLine();
    assert(StringRef(a) == "");

    a = f.readLine();
    assert(StringRef(a) == "");

    assert(f.isEof());
}

def testIsEofWhileLoop() {
    var f = InputFileStream("test.txt");

    var a = Array<StringRef>();
    a.push("this");
    a.push("is the");
    a.push("best");

    var i: uint = 0;

    while (!f.isEof()) {
        var line = f.readLine();
        assert(*a[i] == StringRef(line));
        i++;
    }

    assert(i == 3);
}

def testWrite() {
    var f = FileStream("new.txt");

    var ret = f.write("best sentence\n");
    assert(ret);

    f = FileStream("new.txt");
    var read = f.readLine();

    f.close();
    remove("new.txt");
    assert(StringRef(read) == "best sentence");
}

def testInputStream() {
    var f = InputFileStream("test.txt");

    var a = Array<StringRef>();

    a.push("this");
    a.push("is the");
    a.push("best");

    var i: uint = 0;

    for (var line in f.lines()) {
        assert(*a[i] == StringRef(line));
        i++;
    }

    assert(i == 3);
}

def testInputStreamIsOpenOnNonexistingFile() {
    var f = InputFileStream("doesntexist");

    assert(!f.isOpen());

    var f2 = FileStream("test.txt");

    assert(f2.isOpen());
}

def testOutputStream() {
    var f = OutputFileStream("new.txt");

    var ret = f.write("best sentence\n");

    f.close();
    remove("new.txt");
    assert(ret);
}
